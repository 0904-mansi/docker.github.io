# Using ubuntu:14.04 as of 2015-07-22 15:00:00 PST
FROM ubuntu@sha256:36de65e14e47b2a9a3d91c9a832899d4c432a00295bd77ced8d5bb6dc2764318

COPY garant /usr/local/bin/garant
COPY config.yml /etc/garant/config.yml
